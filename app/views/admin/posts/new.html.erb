<h2>Create New Post</h2>

<%= simple_form_for @post, url: admin_posts_path do |f| %>
  <% if @post.errors.any? %>
    <div class="error">
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.input :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :body, as: :ckeditor, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>
