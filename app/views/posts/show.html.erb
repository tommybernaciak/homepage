<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <h2 class="text-center"><%= @post.title %></h2>
        <h5 class="text-center"><%= @post.published_at.strftime('%b %d, %Y') %></h5>
        <div><%= to_markdown(@post.short_intro) %></div>
        <div><%= to_markdown(@post.body) %></div>
      </div>
    </div>
  </div>
</article>
<hr>
