<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @posts.each do |post| %>
      <div class="col-xs-12 post-preview">
        <div class="text-center">
          <h1><%= link_to post.title, post_path(post) %></h1>
          <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
        </div>
        <div><%= to_markdown(post.short_intro) %></div>
        <div><%= link_to 'Read more', post_path(post) %></div>
      </div>
    <% end %>
  </div>
</div>
